<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control'%>
  </div>

  <div class="field form-group">
    <%= form.label :money %>
    <%= form.text_field :money, class: 'form-control'%>
  </div>

  <div class="field form-group">
    <%= form.label :start_at %>
    <%#= form.time_select :start_at, class: 'form-control', id: 'start_at', 'data-target': "#start_at"%>
    
    <div class="input-group date" id="datetimepicker1" data-target-input="nearest" name="product[start_at]">
        <input type="text" class="form-control datetimepicker-input" data-target="#datetimepicker1"/>
        <div class="input-group-append" data-target="#datetimepicker1" data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
        </div>
    </div>
  </div>

  <div class="field form-group">
    <%= form.label :end_at %>
    <%#= form.time_select :end_at, class: 'form-control'%>

    <div class="input-group date" id="datetimepicker2" data-target-input="nearest" name="product[start_at]">
        <input type="text" class="form-control datetimepicker-input" data-target="#datetimepicker2"/>
        <div class="input-group-append" data-target="#datetimepicker2" data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
        </div>
    </div>
  </div>

  <div class="field form-group">
    <%= form.label :currency %>
    <select name="product[currency]", class='currency-select2 form-control'>
      <option value="NTD">NTD</option>
      <option value="USD">USD</option>
      <option value="HKD">HKD</option>
    </select>
  </div>

  <div class="field form-group">
    <%= form.label :tag_list %>
    <select name="product[tag_list][]", class='form-control js-tag-tokenizer', multiple='multiple'>
      <option value="tag1">tag1</option>
      <option value="tag2">tag2</option>
      <option value="tag3">tag3</option>
    </select>
    <%= display_tag_list(product.tags) %>
  </div>

  <div class="actions">
    <%= form.submit :Submit, class: "btn btn-primary submitbtn" %>
  </div>
<% end %>
